<%= turbo_frame_tag "show_modal" do %>
    <div class="modal fixed z-10 p-8 left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 overflow-auto bg-white rounded shadow-lg mx-auto w-1/3 flex relative">
        <%= link_to "#", data: {
        controller: "show-modal",
        action: "show-modal#close"
        }, class: "absolute top-0 right-0 m-2 bg-custom-red text-white font-bold rounded-full h-8 w-8 flex items-center justify-center" do %>
        Ã—
        <% end %>

        <div class="mx-auto">
            <h1 class="text-center font-bold text-2xl mb-6 mt-2">Einmallink zur Registrierung erstellen</h1>

            <% if flash.now[:notice] %>
                <div class="text-center mb-5 font-medium rounded-lg">
                    <%= flash.now[:notice] %>
                </div>
            <% end %>

            <%= form_with url: one_time_link_path, method: :post, local: true do %>
                <div class="field">
                    <%= label_tag :email, "Email", class:"block text-sm font-medium text-gray-700" %>
                    <%= email_field_tag :email, nil, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-custom-red focus:border-custom-red" %>
                </div>
                <div class="text-center mt-4">
                    <%= submit_tag "Einmallink senden", class: "mt-4 w-1/2 bg-custom-red hover:bg-custom-hover-red text-white font-bold p-4 text-lg border-0 rounded-md cursor-pointer transition duration-300 ease-in-out" %>
                </div>
            <% end %>
        </div>

    </div>
<% end %>