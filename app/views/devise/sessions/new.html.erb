<div class="flex items-center justify-center pt-5">
  <div class="w-full max-w-md bg-white p-8">
    <h1 class="font-bold text-center mb-2 text-5xl">Xpert</h1>
    <h2 class="text-center text-gray-500 mb-4 text-2xl">Login</h2>

    <div class="login-form-container">
      <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
        <div class="mb-4">
          <%= f.label :email, "E-Mail", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-custom-red focus:border-custom-red" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, "Passwort", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-custom-red focus:border-custom-red" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center mb-5">
            <%= f.check_box :remember_me, class:'cursor-pointer' %>
            <%= f.label :remember_me, "Angemeldet bleiben?", class:'cursor-pointer ml-2 font-bold' %>
          </div>
        <% end %>

        <div class="actions flex justify-center">
          <%= f.submit "Anmelden", class: "w-1/2 bg-custom-red hover:bg-custom-hover-red text-white font-bold p-4 text-lg border-0 rounded-md cursor-pointer transition duration-300 ease-in-out", data: {turbo: false} %>
        </div>
      <% end %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Passwort vergessen?", new_user_password_path, class: "forgot-password actions flex justify-center mt-2 cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
